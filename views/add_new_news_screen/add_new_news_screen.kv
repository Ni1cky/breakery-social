<AddNewNewsScreen>:
    post_item: post_item
    MDBoxLayout:
        spacing: 5

        MDIconButton:
            icon: 'close'

        MDBoxLayout:
            id: post_item

        MDIconButton:
            icon: 'check'


<NewPostWidget>:
    radius: [25, 25, 25, 25]
    pos_hint: {'center_x': .5, "center_y": .5}
    md_bg_color: 0, 0, 1, .05

    MDBoxLayout:
        orientation: "vertical"

        TwoLineIconListItem:
            text: root.author
            secondary_text: root.time

            IconLeftWidget:
                icon: root.profile_picture

        MDTextField:
            padding_x: 10
            multiline: True
            halign: "center"

        FitImage:
            source:

        MDBoxLayout:
            orientation: "horizontal"

            MDIconButton:
                icon: "heart"

            MDIconButton:
                icon: "comment"

            MDIconButton:
                icon: "arrow-right"
