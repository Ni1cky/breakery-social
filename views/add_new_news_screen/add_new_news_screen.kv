<ImageButton@ButtonBehavior+FitImage>:

<AddNewNewsScreen>:
    post_item: post_item
    MDBoxLayout:
        spacing: 5

        MDIconButton:
            icon: 'close'
            on_release: root.go_to_profile_screen()

        MDBoxLayout:
            id: post_item

        MDIconButton:
            icon: 'check'
            on_release: root.check_and_publish_post()


<NewPostWidget>:
    image: image
    radius: [25, 25, 25, 25]
    pos_hint: {'center_x': .5, "center_y": .5}
    md_bg_color: 0, 0, 1, .05

    MDBoxLayout:
        orientation: "vertical"

        TwoLineIconListItem:
            text: root.author
            secondary_text: root.time
            ripple_scale: 0

            IconLeftWidget:
                icon: root.profile_picture

        MDTextField:
            size_hint_x: .95
            pos_hint: {"center_x": .5}
            halign: "center"
            multiline: True
            max_height: 250
            theme_text_color: "Custom"
            line_color_focus: 0, 0, 0, 1
            text_color_focus: 0, 0, 0, 1
            text_color_normal: 0, 0, 0, 1

        ImageButton:
            id: image
            source: 'img/image-plus.png'
            pos_hint: {"top": 0, 'center_x': .5}
            on_press: root.open_file_manager()

        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            size: 0, 48

            MDIconButton:
                icon: "heart"
                ripple_scale: 0

            MDIconButton:
                icon: "comment"
                ripple_scale: 0

            MDIconButton:
                icon: "arrow-right"
                ripple_scale: 0
