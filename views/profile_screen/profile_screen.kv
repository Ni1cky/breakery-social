<ProfileScreen>:
    name_field: name_field
    surname_field: surname_field
    avatar: avatar
    edit_buttons: edit_buttons

    MDBoxLayout:
        orientation: "vertical"
        spacing: "15dp"
        padding: "25dp"

        AnchorLayout:
            pos_hint: {"center_x": .5}
            size_hint: None, None
            size: "250dp", "250dp"

            MDIconButton:
                id: avatar
                icon: "img/profile.jpg"
                ripple_scale: 0
                icon_size: "250dp"
                on_release: if root.edit_mode_is_enable: root.change_avatar()

        MDBoxLayout:

            StackLayout:
                orientation: "tb-lr"

                MDTextField:
                    id: name_field
                    disabled: True
                    text: "Name"
                    hint_text: "Name"
                    hint_text_color_focus: .65, .65, .65, 1
                    theme_text_color: "custom"
                    line_color_normal: 1, 1, 1, 0
                    line_color_focus: 0, 0, 0, 1
                    text_color_focus: 0, 0, 0, 1
                    text_color_normal: 0, 0, 0, 1

                MDTextField:
                    id: surname_field
                    disabled: True
                    text: "Surname"
                    hint_text: "Surname"
                    hint_text_color_focus: .65, .65, .65, 1
                    theme_text_color: "custom"
                    line_color_normal: 1, 1, 1, 0
                    line_color_focus: 0, 0, 0, 1
                    text_color_focus: 0, 0, 0, 1
                    text_color_normal: 0, 0, 0, 1

            StackLayout:
                orientation: "rl-bt"
                id: edit_buttons

                MDIconButton:
                    icon: "pencil"
                    on_release: root.enable_edit_mode()
