<RegisterScreen>:
    login: login
    passw: passw
    your_name: your_name
    surname: surname
    BoxLayout:
        padding: 0.2
        orientation: 'vertical'
        AnchorLayout:
            MDTextField:
                id: your_name
                hint_text: "name"
                mode: "fill"
        AnchorLayout:
            MDTextField:
                id: surname
                #size_hint: 0.5,0.2
                hint_text: "surname"
                mode: "fill"
        AnchorLayout:
            MDTextField:
                id: login
                #size_hint: 0.5,0.2
                hint_text: "login"
                mode: "fill"
        AnchorLayout:
            MDTextField:
                id: passw
                password: True
                #size_hint: 0.5,0.2
                hint_text: "password"
                mode: "fill"
        BoxLayout:
            AnchorLayout:
                Button:
                    size_hint: 0.5,0.2
                    text: "Register"
                    on_press: root.register()
            AnchorLayout:
                Button:
                    size_hint: 0.5,0.2
                    text: "go to LOG"
                    on_press: root.go_to_login_screen()