<LoginScreen>:
    login: login
    passw: passw
    MDBoxLayout:
        size_hint: 1, 0.9
        orientation: "vertical"
        AnchorLayout:
            padding: 10
            top:1
            MDTextField:
                id: login
                icon_left: "account"
                hint_text: "Login"
                mode: "fill"
                line_color_focus: 0.57, 0.57, 0.57, 1
                fill_color_focus: 0.57, 0.57, 0.57, 1
                hint_text_color_focus: 0.96, 1, 0.98, 1
                icon_left_color_focus: 0.96, 1, 0.98, 1
                text_color_focus: 0.96, 1, 0.98, 1
        AnchorLayout:
            padding: 10

            MDTextField:
                id: passw
                icon_left: "lock"
                password: True
                hint_text: "Password"
                mode: "fill"
                line_color_focus: 0.57, 0.57, 0.57, 1
                fill_color_focus: 0.57, 0.57, 0.57, 1
                hint_text_color_focus: 0.96, 1, 0.98, 1
                icon_left_color_focus: 0.96, 1, 0.98, 1
                text_color_focus:0.96, 1, 0.98, 1
                max_text_length: 10
    MDBoxLayout:
        size_hint: 1, 0.1
        AnchorLayout:
            MDFillRoundFlatButton:
                id: sign_in_button
                text: "Sign In"
                md_bg_color: 0.57, 0.57, 0.57, 1
                on_press: root.go_to_main_screen()
        AnchorLayout:
            MDFillRoundFlatButton:
                text: "Registration"
                md_bg_color: 0.57, 0.57, 0.57, 1
                on_press: root.go_to_registration_screen()