<LoginScreen>:
    login: login
    passw: passw
    MDBoxLayout:
        size_hint_y: 0.8
        orientation: "vertical"
        AnchorLayout:
            MDTextField:
                id: login
                icon_left: "account"
                hint_text: "Login"
                mode: "fill"
                line_color_focus: 0.57, 0.57, 0.57, 1
                fill_color_focus: 0.57, 0.57, 0.57, 1
                hint_text_color_focus: 0.96, 1, 0.98, 1
                icon_left_color_focus: 0.96, 1, 0.98, 1
        AnchorLayout:
            pos_hint: {"center_y": .5}
            MDTextField:
                id: passw
                icon_left: "lock"
                password: True
                hint_text: "Password"
                mode: "fill"
                line_color_focus: 0.57, 0.57, 0.57, 1
                fill_color_focus: 0.57, 0.57, 0.57, 1
                hint_text_color_focus: 0.96, 1, 0.98, 1
                icon_left_color_focus: 0.96, 1, 0.98, 1
    MDBoxLayout:
        size_hint_y: 0.2
        AnchorLayout:
            MDFillRoundFlatButton:
                id: sign_in_button
                text: "Sign In"
                md_bg_color: 0.57, 0.57, 0.57, 1
                on_press: root.go_to_main_screen()
        AnchorLayout:
            MDFillRoundFlatButton:
                text: "Registration"
                md_bg_color: 0.57, 0.57, 0.57, 1
                on_press: root.go_to_registration_screen()
