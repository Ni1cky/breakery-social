<LoginScreen>:
    login: login
    passw: passw
    remember_me: remember_me
    MDBoxLayout:
        size_hint: 0.8, 0.4
        orientation: "vertical"
        pos_hint: {"center_x": .5, "center_y": .6}
        AnchorLayout:
            padding: 10
            anchor_y: "center"
            anchor_x: "center"
            MDTextField:
                id: login
                icon_left: "account"
                hint_text: "Login"
                mode: "fill"
                line_color_focus: 0.57, 0.57, 0.57, 1
                fill_color_focus: 0.57, 0.57, 0.57, 1
                hint_text_color_focus: 0.96, 1, 0.98, 1
                icon_left_color_focus: 0.96, 1, 0.98, 1
                text_color_focus: 0.96, 1, 0.98, 1
        AnchorLayout:
            padding: 10
            anchor_y: "top"
            anchor_x: "center"
            MDTextField:
                id: passw
                icon_left: "lock"
                password: True
                hint_text: "Password"
                mode: "fill"
                line_color_focus: 0.57, 0.57, 0.57, 1
                fill_color_focus: 0.57, 0.57, 0.57, 1
                hint_text_color_focus: 0.96, 1, 0.98, 1
                icon_left_color_focus: 0.96, 1, 0.98, 1
                text_color_focus:0.96, 1, 0.98, 1
    MDBoxLayout:
        size_hint: 1, 0.1
        pos_hint: {"center_x": .63, "center_y": .4}
        orientation: "horizontal"
        MDCheckbox:
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint_x: 0.08
            size_hint_y: 0.3
            id: remember_me
            active: False
        MDLabel:
            text: "remember me"
    MDBoxLayout:
        size_hint: 1, 0.5
        pos_hint: {"center_x": .5, "center_y": .3}
        AnchorLayout:
            MDFillRoundFlatButton:
                id: sign_in_button
                text: "Sign In"
                md_bg_color: 0.57, 0.57, 0.57, 1
                on_press: root.go_to_main_screen()
        AnchorLayout:
            MDFillRoundFlatButton:
                text: "Registration"
                md_bg_color: 0.57, 0.57, 0.57, 1
                on_press: root.go_to_registration_screen()