#:import Manager screen_manager
<MainMenuScreen>:
    manager_screen: manager_screen
    backdrop: backdrop
    backdrop_front: backdrop_front

    button_profile: button_profile
    button_news: button_news
    button_message: button_message
    MDBackdrop:
        id: backdrop
        left_action_items: [['menu', lambda x: root.open_menu_backdrop1()]]
        title: "Example Backdrop"
        radius_left: "25dp"
        radius_right: "0dp"
        header_text: "VK:"
        back_layer_color: 0.28, 0.24, 0.55, 1
        front_layer_color: 0.96, 1, 0.98, 1
        MDBackdropBackLayer:
            backdrop: None
            backlayer: None
            MDGridLayout:
                pos_hint: {"top": 1}
                adaptive_height: True
                cols: 1
                padding: "5dp"
                OneLineIconListItem:
                    id: button_profile
                    text: "Profile"
                    on_press: root.go_to_profile_screen(), root.open_menu_backdrop()
                    theme_text_color: 'Custom'
                    text_color: 0.96, 1, 0.98, 1
                    IconLeftWidget:
                        theme_text_color: 'Custom'
                        text_color: 0.96, 1, 0.98, 1
                        icon: "account"
                OneLineIconListItem:
                    id: button_news
                    text: "News"
                    on_press: root.go_to_news_screen(), root.open_menu_backdrop()
                    theme_text_color: 'Custom'
                    text_color: 0.96, 1, 0.98, 1
                    IconLeftWidget:
                        theme_text_color: 'Custom'
                        text_color: 0.96, 1, 0.98, 1
                        icon: "newspaper-variant"
                OneLineIconListItem:
                    id: button_message
                    text: "Message"
                    on_press: root.go_to_message_screen(), root.open_menu_backdrop()
                    theme_text_color: 'Custom'
                    text_color: 0.96, 1, 0.98, 1
                    IconLeftWidget:
                        theme_text_color: 'Custom'
                        text_color: 0.96, 1, 0.98, 1
                        icon: "forum"
        MDBackdropFrontLayer:
            id: backdrop_front
            Manager:
                id: manager_screen