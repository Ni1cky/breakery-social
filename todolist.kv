                    source: "scala/scala.png"
                TwoLineAvatarListItem:
                    text: "Name Surname"

            BoxLayout:
                orientation: 'vertical'
                size_hint: 2,2
                BoxLayout:
                    ScrollView:
                        id: listBox
                        source: "scala/scala.jpg"
