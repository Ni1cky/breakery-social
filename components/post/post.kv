<PostWidget>:
    post_text: post_text
    image: image

    canvas:
        Color:
            rgba: 0, 0, 1, 0.1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [25, 25, 25, 25]

    MDBoxLayout:
        orientation: "vertical"

        TwoLineIconListItem:
            text: root.author
            secondary_text: root.time
            ripple_scale: 0

            IconLeftWidget:
                icon: root.profile_picture

        MDTextField:
            id: post_text
            size_hint_x: .95
            pos_hint: {"center_x": .5}
            halign: "center"
            multiline: True
            max_height: 250
            theme_text_color: "Custom"
            line_color_normal: 1, 1, 1, 0
            disabled: True

        FitImage:
            id: image

        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            size: 0, 48

            MDIconButton:
                icon: "heart"

            MDIconButton:
                icon: "comment"

            MDIconButton:
                icon: "arrow-right"
